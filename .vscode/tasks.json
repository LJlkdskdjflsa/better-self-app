{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "tsc",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "run js file",
            "type": "shell",
            "command": "node",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}.js"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "tsc"
            ]
        }
    ]
}